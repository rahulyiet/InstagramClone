<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Search">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/search" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Search"
            android:textSize="30dp"
            android:layout_marginTop="5dp"
            android:textStyle="normal"
            />

    </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_below="@+id/header_cover_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-15dp"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:padding="13dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kohli"
                    app:civ_border_color="#ff0000"
                    app:civ_border_width="3dp" />


                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile2"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_below="@+id/header_cover_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-15dp"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:padding="13dp"

                    android:scaleType="centerCrop"
                    android:src="@drawable/pyar"
                    app:civ_border_color="#ff0000"
                    app:civ_border_width="3dp" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile3"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_below="@+id/header_cover_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-15dp"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:padding="13dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avengers"
                    app:civ_border_color="#0000FF"
                    app:civ_border_width="3dp" />


                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile4"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_below="@+id/header_cover_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-15dp"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:padding="13dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/race"
                    app:civ_border_color="#008000"
                    app:civ_border_width="3dp" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile5"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_below="@+id/header_cover_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-15dp"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:padding="13dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tiger"
                    app:civ_border_color="#FFFFFFFF"
                    app:civ_border_width="3dp"/>




                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile6"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_below="@+id/header_cover_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-15dp"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:padding="13dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pyar"
                    app:civ_border_color="#008000"
                    app:civ_border_width="3dp"/>




            </LinearLayout>

        </HorizontalScrollView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>





</LinearLayout>