<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/create"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_create_black_24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="instagram"
            android:textSize="30dp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="40dp"
            android:layout_height="30dp"

            android:layout_margin="8dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/share" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-15dp"
                android:clickable="true"
                android:elevation="5dp"
                android:padding="13dp"
                android:scaleType="centerCrop"
                android:src="@drawable/kohli"
                app:civ_border_color="#ff0000"
                app:civ_border_width="3dp"

                android:onClick="statrStory"/>


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile2"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-15dp"
                android:clickable="true"
                android:elevation="5dp"
                android:padding="13dp"

                android:scaleType="centerCrop"
                android:src="@drawable/pyar"
                app:civ_border_color="#ff0000"
                app:civ_border_width="3dp"
                android:onClick="statrStory"/>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile3"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-15dp"
                android:clickable="true"
                android:elevation="5dp"
                android:padding="13dp"
                android:scaleType="centerCrop"
                android:src="@drawable/avengers"
                app:civ_border_color="#0000FF"
                app:civ_border_width="3dp"

                android:onClick="statrStory" />


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile4"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-15dp"
                android:clickable="true"
                android:elevation="5dp"
                android:padding="13dp"
                android:scaleType="centerCrop"
                android:src="@drawable/race"
                app:civ_border_color="#008000"
                app:civ_border_width="3dp"

                android:onClick="statrStory" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile5"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-15dp"
                android:clickable="true"
                android:elevation="5dp"
                android:padding="13dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tiger"
                app:civ_border_color="#FFFFFFFF"
                app:civ_border_width="3dp"
                android:onClick="statrStory"/>


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile6"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-15dp"
                android:clickable="true"
                android:elevation="5dp"
                android:padding="13dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pyar"
                app:civ_border_color="#008000"
                app:civ_border_width="3dp"

                android:onClick="statrStory" />


        </LinearLayout>

    </HorizontalScrollView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/img1" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/search" />

        <ImageView
            android:id="@+id/postBtn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="5dp"
            android:onClick="post"
            android:src="@drawable/plus" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/heart" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/people" />


    </LinearLayout>

</LinearLayout>
